#!/bin/bash

# Components of Toolbag are installed in /usr/local/bin
# because this is generally on the path and rarely used.  

	dest=/usr/local/bin
	version=v0.1-alpha

	if [ ! -d "$dest" ]; then 	
		echo "'$dest' folder missing, I cannot proceed"		
		exit
	fi

    if [ ! -d ~/temp ]; then
        mkdir ~/temp
    fi    
    cd ~/temp 
	wget https://github.com/julianpratt/Toolbag/archive/refs/tags/$version.tar.gz -O toolbag.tar.gz
	tar xvzf toolbag.tar.gz --strip-components=1
	if [ ! -d scripts ]; then 	
		echo "scripts folder missing from Toolbag, I cannot proceed"	
		exit
	fi	
	# Install scripts   	
	cd scripts
	chmod +x *	# scripts come down from github without the execute permission set 
	chown root:root * 
	sudo mv * $dest
	sudo wget https://github.com/julianpratt/Toolbag/releases/download/$version/hub_$(query arch) -O $dest/hub
	cd ~
	sudo rm -rf temp
